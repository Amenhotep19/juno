{
  "name": "juno",
  "version": "0.3.2-beta.0",
  "private": true,
  "description": "Jupyter Notebook stays on macOS menubar.",
  "main": "main.js",
  "license": "MIT",
  "repository": "uetchy/juno",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "electronVersion": "2.0.2",
  "scripts": {
    "start": "electron .",
    "test": "mocha",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "release-it --src.tagName='v%s'"
  },
  "build": {
    "appId": "io.uechi.juno",
    "productName": "Juno",
    "files": [
      "**/*",
      "build/tray*",
      "!scripts",
      "!*.md"
    ],
    "afterPack": "./scripts/post-build-mac.js",
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "extend": "^3.0.1",
    "yargs": "^12.0.0-candidate.0"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "mocha": "^5.2.0",
    "plist": "^3.0.1",
    "spectron": "^3.8.0"
  }
}
