{
  "name": "juno",
  "productName": "Juno",
  "version": "0.3.0",
  "private": true,
  "description": "Jupyter Notebook stays on macOS menubar.",
  "main": ".",
  "license": "MIT",
  "repository": "uetchy/juno",
  "electronVersion": "1.2.8",
  "scripts": {
    "test": "mocha && xo",
    "start": "electron .",
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion --app-version=$npm_package_version --icon=./assets/app.icns --overwrite",
    "postbuild": "node scripts/post-build-mac.js",
    "release": "npm-run-all test build"
  },
  "dependencies": {
    "extend": "^3.0.0",
    "yargs": "^4.8.1"
  },
  "devDependencies": {
    "electron-packager": "^7.3.0",
    "mocha": "^3.0.1",
    "electron": "^1.3.3",
    "npm-run-all": "^2.3.0",
    "plist": "^1.2.0",
    "spectron": "^3.3.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
