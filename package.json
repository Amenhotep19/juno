{
  "name": "juno",
  "description": "Jupyter Notebook stays on macOS menubar.",
  "version": "0.3.2-beta.2",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron .",
    "test": "mocha"
  },
  "dependencies": {
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.28.4",
    "mocha": "^5.2.0",
    "plist": "^3.0.1",
    "spectron": "^5.0.0"
  },
  "build": {
    "appId": "io.uechi.juno",
    "productName": "Juno",
    "files": [
      "**/*",
      "build/tray*",
      "!scripts",
      "!*.md"
    ],
    "afterPack": "./scripts/post-build-mac.js",
    "publish": [
      "bintray",
      "github"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "prune": false
  },
  "electronVersion": "4.0.1",
  "license": "MIT",
  "private": true,
  "repository": "uetchy/juno"
}
